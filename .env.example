# Copy this file to .env and fill in real values. Do NOT commit .env.

# PostgreSQL connection string
# For Docker Compose (service name: postgres):
# DATABASE_URL="postgresql://postgres:postgres@postgres:5432/beauty?schema=public"
# For local dev (macOS Homebrew/Postgres):
# DATABASE_URL="postgresql://<user>@127.0.0.1:5432/beauty?schema=public"
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/beauty?schema=public"

# JWT secret for auth tokens
JWT_SECRET="change-me-to-a-long-random-string"

# Public app URL (used in redirects/emails)
APP_URL="http://localhost:3000"

# Node environment
NODE_ENV="development"
